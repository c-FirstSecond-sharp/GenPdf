@model GenPdf.PDFPrinter

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>
<iframe src="@Url.Action("Index", "Printer")" name="foo" width="600" height="400"></iframe>
<form asp-action="Details">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label class="control-label">Choose Drawing</label>
        @Html.DropDownList("SelectedDrawing", @Model.Files)
    </div>
    <div class="form-group">
        <input type="submit" value="Select" class="btn btn-primary" />
    </div>
</form>
<div>
    <h4>PDFPrinter</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Text)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Text)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Sentence)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Sentence)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TextColor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TextColor)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.RectangleColor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RectangleColor)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SelectedDrawing)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SelectedDrawing)
        </dd>
    </dl>
</div>
