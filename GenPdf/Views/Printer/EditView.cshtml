@model GenPdf.PDFPrinter

@{
    ViewData["Title"] = "EditView";
}

<h1>EditView</h1>

<h4>PDFPrinter</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditView">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for=@Model.ID class="control-label"></label>
                <input asp-for=@Model.ID class="form-control" readonly />
                <span asp-validation-for=@Model.ID class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <label asp-for="Sentence" class="control-label"></label>
                <input asp-for="Sentence" class="form-control" />
                <span asp-validation-for="Sentence" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TextColor" class="control-label"></label>
                <input asp-for="TextColor" class="form-control" />
                <span asp-validation-for="TextColor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RectangleColor" class="control-label"></label>
                <input asp-for="RectangleColor" class="form-control" />
                <span asp-validation-for="RectangleColor" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
